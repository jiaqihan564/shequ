{
  "name": "shequ-tech-community",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "技术交流社区 - 现代化的Vue 3应用",
  "author": "Shequ Team",
  "keywords": ["vue3", "typescript", "vite", "community", "tech"],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "vue": "^3.5.18",
    "vue-router": "^4.4.5",
    "pinia": "^2.2.6",
    "axios": "^1.7.7",
    "@vueuse/core": "^11.0.0",
    "@vueuse/head": "^2.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.5.1",
    "typescript": "~5.4.0",
    "vue-tsc": "^2.1.6",
    "vite": "^7.1.2",
    "eslint": "^8.57.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint-plugin-vue": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^25.0.0",
    "unplugin-auto-import": "^0.18.0",
    "unplugin-vue-components": "^0.27.0"
  }
}
