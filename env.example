# ==================== 配置说明 ====================
# 本项目使用统一的配置管理系统：
# - 环境变量配置（本文件）：运行时可配置的参数
# - 常量配置文件：不需要环境变量的固定值
#   * src/config/storage-keys.ts - LocalStorage键名常量
#   * src/config/http-status.ts - HTTP状态码常量
#   * src/config/validation-constants.ts - 表单验证常量
#   * src/config/file-types.ts - 文件类型和上传限制
#
# 配置优先级：环境变量 > 代码默认值

# ==================== API 配置 ====================
VITE_API_BASE_URL=http://localhost:3001/api
# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=10000
# API 最大重定向次数
VITE_API_MAX_REDIRECTS=3
# API 最大内容大小（MB）
VITE_API_MAX_CONTENT_SIZE_MB=10
# API 最大请求体大小（MB）
VITE_API_MAX_BODY_SIZE_MB=10
# API 响应缓存时长（毫秒，5分钟）
VITE_API_CACHE_DURATION_MS=300000
# 认证过期跳转延迟（毫秒）
VITE_AUTH_REDIRECT_DELAY_MS=2000

# ==================== 应用配置 ====================
VITE_APP_TITLE=技术交流社区
VITE_APP_DESCRIPTION=现代化的技术交流社区平台

# ==================== 功能开关 ====================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false

# ==================== 第三方服务 ====================
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# ==================== 新闻数据源配置 ====================
# 新闻提供商：mock | newsapi | rss
VITE_NEWS_PROVIDER=rss
# NewsAPI.org 配置（免费版每日100次请求）
# 访问 https://newsapi.org 注册获取免费API密钥
VITE_NEWSAPI_KEY=你的NewsAPI密钥
# GNews API 配置（备用方案，需要代理服务器）
VITE_NEWS_PROXY_URL=/news
GNEWS_API_KEY=你的GNews_API_密钥
# Mock 新闻延迟范围（毫秒）
VITE_NEWS_MOCK_DELAY_MIN=200
VITE_NEWS_MOCK_DELAY_MAX=400

# ==================== 代码执行配置 ====================
# 代码执行超时时间（毫秒）
VITE_CODE_EXECUTION_TIMEOUT=30000

# ==================== 地理位置服务配置 ====================
# 高德地图 API Key（可选，用于更精确的国内定位）
VITE_AMAP_KEY=
# 地理位置缓存时长（毫秒，24小时）
VITE_GEO_CACHE_TTL_MS=86400000
# 地理位置 API 请求超时（毫秒）
VITE_GEO_TIMEOUT_MS=5000
# 浏览器定位超时（毫秒）
VITE_GEO_BROWSER_TIMEOUT_MS=7000
# 浏览器定位缓存时长（毫秒，5分钟）
VITE_GEO_BROWSER_MAX_AGE_MS=300000

# ==================== 用户注册/登录默认配置 ====================
# 默认省份（地理位置获取失败时使用）
VITE_DEFAULT_PROVINCE=山东
# 默认城市（地理位置获取失败时使用）
VITE_DEFAULT_CITY=威海
# 注册时地理位置检测超时（毫秒）
VITE_REGISTER_GEO_TIMEOUT_MS=3000

# ==================== 文件上传配置 ====================
# 分片上传：每片大小（MB）
VITE_UPLOAD_CHUNK_SIZE_MB=2
# 图片最大大小（MB）
VITE_IMAGE_MAX_SIZE_MB=5
# 文章图片最大大小（MB）
VITE_ARTICLE_IMAGE_MAX_SIZE_MB=5
# Markdown 文件最大大小（MB）
VITE_MARKDOWN_MAX_SIZE_MB=5
# 文章 Markdown 文件最大大小（MB）
VITE_ARTICLE_MD_MAX_SIZE_MB=5

# ==================== 图片懒加载配置 ====================
# 最大并发加载数
VITE_LAZY_LOAD_MAX_CONCURRENT=4
# 提前加载距离（像素）
VITE_LAZY_LOAD_ROOT_MARGIN=50

# ==================== 性能监控配置 ====================
# FPS 良好阈值
VITE_PERF_FPS_GOOD_THRESHOLD=55
# FPS 一般阈值
VITE_PERF_FPS_OK_THRESHOLD=30
# FPS 计算间隔（毫秒）
VITE_PERF_FPS_CALC_INTERVAL_MS=1000
# 性能监控位置（像素）
VITE_PERF_MONITOR_TOP=80
VITE_PERF_MONITOR_RIGHT=20

# ==================== WebSocket 配置 ====================
# 最大重连尝试次数
VITE_WS_MAX_RECONNECT_ATTEMPTS=5
# 重连延迟（毫秒，逗号分隔）
VITE_WS_RECONNECT_DELAYS=1000,2000,4000,8000,10000
# 最大消息缓存数量
VITE_WS_MAX_MESSAGES=200
# 心跳间隔（毫秒）
VITE_WS_HEARTBEAT_INTERVAL_MS=30000

# ==================== 弹幕配置 ====================
# 弹幕轨道数量
VITE_DANMAKU_TRACK_COUNT=8
# 弹幕轨道高度（像素）
VITE_DANMAKU_TRACK_HEIGHT=60
# 弹幕基础滚动时间（秒）
VITE_DANMAKU_BASE_DURATION=12

# ==================== Toast 通知配置 ====================
# 默认显示时长（毫秒）
VITE_TOAST_DEFAULT_DURATION_MS=3000
# 小屏幕最大可见数量
VITE_TOAST_MAX_VISIBLE_SMALL=3
# 大屏幕最大可见数量
VITE_TOAST_MAX_VISIBLE_LARGE=5
# 屏幕宽度断点（像素）
VITE_TOAST_SCREEN_WIDTH_BREAKPOINT=480
# 屏幕高度断点（像素）
VITE_TOAST_SCREEN_HEIGHT_BREAKPOINT=640

# ==================== 轮询间隔配置 ====================
# 未读消息轮询间隔（毫秒）
VITE_POLLING_UNREAD_MESSAGES_MS=10000
# 新闻轮询间隔（毫秒）
VITE_POLLING_NEWS_MS=120000
# 实时指标刷新间隔（毫秒）
VITE_POLLING_REALTIME_METRICS_MS=5000

# ==================== UI 延迟配置 ====================
# 资源上传成功后跳转延迟（毫秒）
VITE_UI_UPLOAD_SUCCESS_REDIRECT_DELAY_MS=1500
# 消息滚动延迟（毫秒）
VITE_UI_MESSAGE_SCROLL_DELAY_MS=300
# Monaco编辑器预加载超时（毫秒）
VITE_UI_MONACO_PRELOAD_TIMEOUT_MS=2000
# Monaco编辑器预加载降级超时（毫秒）
VITE_UI_MONACO_PRELOAD_FALLBACK_MS=1000
# 登录时地理位置获取超时（毫秒）
VITE_UI_GEO_LOGIN_TIMEOUT_MS=3000

# ==================== 表单长度限制 ====================
# 资源标题最大长度
VITE_FORM_RESOURCE_TITLE_MAX=200
# 资源描述最大长度
VITE_FORM_RESOURCE_DESC_MAX=1000
# 文章标题最大长度
VITE_FORM_ARTICLE_TITLE_MAX=200
# 文章描述最大长度
VITE_FORM_ARTICLE_DESC_MAX=500
# 评论内容最大长度
VITE_FORM_COMMENT_MAX=500
# 私信内容最大长度
VITE_FORM_PRIVATE_MESSAGE_MAX=1000
# 聊天消息最大长度
VITE_FORM_CHAT_MESSAGE_MAX=500

# ==================== 地图配置扩展 ====================
# 高德地图搜索半径（米）
VITE_AMAP_SEARCH_RADIUS=3000

# ==================== 缓存配置扩展 ====================
# 地区数据缓存时长（毫秒，7天）
VITE_REGIONS_CACHE_TTL_MS=604800000

# ==================== API 默认参数配置 ====================
# 历史记录默认 limit 参数
VITE_API_HISTORY_DEFAULT_LIMIT=50

# ==================== 懒加载扩展配置 ====================
# Intersection Observer 阈值（0-1之间）
VITE_LAZY_LOAD_THRESHOLD=0.01

# ==================== 注意事项 ====================
# 1. 修改环境变量后需要重启开发服务器才能生效
# 2. 生产环境部署时，请通过CI/CD系统或.env.production文件设置实际值
# 3. 敏感信息（如API密钥）不要提交到版本控制系统
# 4. 文件类型、验证规则等固定常量在 src/config/*.ts 中配置
# 5. 详细的配置文档请参考 src/config/index.ts